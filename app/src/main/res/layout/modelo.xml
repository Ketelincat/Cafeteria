<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp"
    tools:context=".CoffeeFragment"
    android:id="@+id/modelo"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="180dp"
        android:layout_height="750px"
        android:backgroundTint="#8c5838"
        app:cardCornerRadius="90px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txttituloCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20sp"
                android:text="Café"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/imgCafe"
                android:layout_width="225px"
                android:layout_height="175px"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cafe"/>

            <TextView
                android:id="@+id/txtFrasecafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:text="Café preto mineiro, o sabor forte de minas em suas papilas gustativas."
                android:textColor="#fff" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:numStars="1"
                    android:rating="1" />

                <TextView
                    android:id="@+id/txtNotaCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="15px"
                    android:text="9.5"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17px"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_baseline_favorite_border" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17px"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_baseline_share" />



            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>